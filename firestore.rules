rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if the user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Projects: Users can only read/write their own projects
    match /projects/{projectId} {
      allow create: if isAuthenticated() && request.resource.data.uid == request.auth.uid;
      allow read, update, delete: if isOwner(resource.data.uid);
    }

    // Assets: Users can only read/write their own assets
    match /assets/{assetId} {
      allow create: if isAuthenticated() && request.resource.data.uid == request.auth.uid;
      allow read, update, delete: if isOwner(resource.data.uid);
    }

    // Lore: Users can only read/write their own lore
    match /lore/{loreId} {
      allow create: if isAuthenticated() && request.resource.data.uid == request.auth.uid;
      allow read, update, delete: if isOwner(resource.data.uid);
    }
  }
}
